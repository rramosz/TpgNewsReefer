<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item><!--colorPrimaryDark</item>-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RaisedButtonDark" parent="Theme.AppCompat.Light">
        <item name="android:colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>

    </style>

    <style name="EditTextBlue" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textSize">@dimen/edit_text_file_login</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:colorControlNormal">@color/colorAccent</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
    </style>


    <style name="EditTextWhite" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textSize">@dimen/edit_text_file_login</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:colorAccent">@color/colorWhite</item>
        <item name="android:colorControlNormal">@color/colorWhite</item>
        <item name="android:colorControlActivated">@color/colorWhite</item>
    </style>



    <style name="EditTexBlack" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/colorGrisOscuro</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColorPrimary">@color/colorGrisOscuro</item>
        <item name="android:colorAccent">@color/colorGrisOscuro</item>
        <item name="android:colorControlNormal">@color/colorGrisOscuro</item>
        <item name="android:colorControlActivated">@color/colorGrisOscuro</item>
    </style>



    <style name="ActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorWhite</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="RedButtonTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>


    <style name="GrisButtonTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorButtonNormal">@color/colorGris</item>
        <item name="android:colorControlHighlight">@color/colorGrisOscuro</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="GreenButtonTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorButtonNormal">@color/colorGreen</item>
        <item name="android:colorControlHighlight">@color/colorGreenDark</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>



    <style name="WhiteButtonTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorButtonNormal">@color/colorWhite</item>
        <item name="android:colorControlHighlight">@color/colorWhiteDark</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>


    <style name="BlueButtonTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorButtonNormal">@color/colorBlue</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>


</resources>
